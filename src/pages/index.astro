---
import Prose from "@/components/Prose.astro";
import FixedSidebar from "@/components/FixedSidebar.astro";
import { Content as Experiences } from "@/experiences/experiences.mdx";
import Timeline from "@/components/Timeline";
import Time from "@/components/Time.astro";
import Starfield from "@/components/Starfield.astro";
---

<html lang="en" class="h-full antialiased">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body class="flex min-h-full flex-col bg-gray-950 text-white">
    <FixedSidebar />
    <div class="relative flex-auto">
      <Timeline />
      <main class="space-y-20 py-20 sm:space-y-32 sm:py-32">
        <article class="scroll-mt-16">
          <!-- <Time /> -->
          <div class="mx-auto max-w-7xl px-6 lg:flex lg:px-8">
            <div class="lg:ml-96 lg:flex lg:w-full lg:justify-end lg:pl-32">
              <div
                class="typography mx-auto max-w-lg lg:mx-0 lg:w-0 lg:max-w-xl lg:flex-auto"
              >
                <Prose>
                  <Experiences />
                </Prose>
              </div>
            </div>
          </div>
        </article>
      </main>
    </div>
  </body>
</html>
